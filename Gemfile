source 'https://rubygems.org'

gem 'rails', '3.2.13'

gem 'pg'
gem 'dynamic_form'
gem 'modernizr-rails'
gem 'jquery-rails'
gem "animate-rails"
gem 'paperclip'
gem 'aws-sdk'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'

  # Add foundation ehre
  gem 'compass-rails'
  gem 'zurb-foundation', '~> 4.0.0'
end

group :test, :development do
  gem 'factory_girl'
  gem 'rspec-rails'
  gem 'capybara'
  gem 'accept_values_for'
  gem 'guard-rspec'
  gem 'growl'
end
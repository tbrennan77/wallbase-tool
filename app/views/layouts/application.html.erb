<body>
    <% if flash[:notice] %>
      <div class='alert-box success'><%= flash[:notice] %></div>
    <% end %>
    <% if flash[:error] %>
      <div class='alert-box error'><%= flash[:error] %></div>
    <% end %>

    <nav class="top-bar">
      <ul>
        <!-- Title Area -->
        <li class="name">
          <h1>
            <%= link_to "Wallbase Chart", root_path %>
          </h1>
        </li>        
      </ul>

      <section>
        <!-- Left Nav Section -->
        <ul class="right">
          <li class="divider show-for-medium-and-up"></li>
          <li>
            <%= link_to "Collections", collections_path %>
          </li>
        </ul>
        <ul class="right">
          <li class="divider show-for-medium-and-up"></li>
          <li>
            <%= link_to "Style Types", style_types_path %>
          </li>
        </ul>

      </section>
    </nav>
  
<div class="row">
  <div class="twelve columns">
    <%= yield %>
  </div>
</div>

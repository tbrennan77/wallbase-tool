<h3>Create a Collection area</h3>
<hr />

<%= form_for @collection do |f| %>
  <%= f.error_messages %>
  <%= f.text_field :name, placeholder: "Collection Name" %>
  <%= f.text_field :material, placeholder: "Material Name (Rubber)" %>
  
  <%= f.submit "Create Collection", class: 'success button nice radius' %> <%= link_to "Cancel", root_path, class: 'alert button nice radius' %>
<% end %>
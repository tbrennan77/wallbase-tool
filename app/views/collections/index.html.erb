<h3>Collections</h3>
<hr />
<%= link_to "+ Add Collection", new_collection_path, class: 'success button nice radius' %>
<h3 class="subheader">List of Collections</h3>

<ul class="accordion">
<% @collections.each do |c| %>
  <% if c == @collections.first %>
    <li class="active">
  <% else %>
    <li>
  <% end %>

  <div class="title">      
      <h5><%= c.name %></h5>
  </div>

  <div class="content">
    <%= link_to "+ Add New Style", new_style_type_path(collection_id: c.id), class: 'success small button nice radius' %>    
    <%= link_to "Delete Collection", collection_path(c), method: :delete, class: 'right alert small button nice radius', data: {confirm: "Are you sure?"} %>    <%= link_to "Edit Collection", edit_collection_path(c), class: 'right small button nice radius' %>
    <br />
    <br />
    <% c.style_types.each do |s| %>
      <div class="row">
        <div class="six columns panel"><%= s.name %> (<%= pluralize s.profiles.count, 'profile' %>)
          <div class="right"><%= link_to "+ New Profile", new_profile_path(id: s.id), class: 'success small button nice radius' %> <%= link_to "Edit", edit_style_type_path(s), class: 'small button nice radius' %> <%= link_to "Delete", style_type_path(s), data: {confirm: "Are you sure?"}, :method => :delete, class: 'alert small button nice radius' %></div>
          <ul>
            <% s.profiles.each do |p| %>
              <li><%= p.size %>" <%= p.uuid %> 
              <br /><span style="color: white; border-radius: 18px; text-align: center; padding: 2px 6px; background: purple">A</span> <span style="color: white; border-radius: 18px; text-align: center; padding: 2px 6px; background: green">B</span> <span style="color: white; border-radius: 18px; text-align: center; padding: 2px 6px; background: red">C</span> <span style="color: white; border-radius: 18px; text-align: center; padding: 2px 6px; background: brown">D</span><span style="margin-right: 6px; margin-top: 4px; float: left; -webkit-transform: rotate(45deg); height: 15px; width: 15px; background: #69F;">&nbsp;</span></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
</ul>